<h1>Add a New Book</h1>

<%= form_with model: [@book_club, @book], local: true do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :author %>
  <%= form.text_field :author %>

  <%= form.label :genre %>
  <%= form.text_field :genre %>

  <%= form.label :status, "Status (e.g., reading, completed)" %>
  <%= form.select :status, ["reading", "completed"], prompt: "Select Status" %>

  <%= form.submit "Add Book", class: "btn btn-success" %>
<% end %>
